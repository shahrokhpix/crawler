# Production Environment Configuration
NODE_ENV=production
PORT=3004

# Load Balancer Settings
WORKERS=4
MAX_MEMORY=512M

# Database Settings
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=farsnews_prod
DB_USER=farsnews_user
DB_PASSWORD=your_secure_password

# Security Settings
JWT_SECRET=your_very_secure_jwt_secret_key_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=1
API_RATE_LIMIT_MAX=30
CRAWLER_RATE_LIMIT_WINDOW=5
CRAWLER_RATE_LIMIT_MAX=10

# Performance Settings
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
STATIC_CACHE_MAX_AGE=86400
ADMIN_CACHE_MAX_AGE=3600

# Crawler Settings
MAX_CONCURRENT_CRAWLS=3
CRAWL_TIMEOUT=120000
MAX_PAGES_PER_CRAWL=100
CRAWL_DELAY=2000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Cleanup Settings
CLEANUP_OLDER_THAN_DAYS=30
CLEANUP_SCHEDULE="0 2 * * *"

# Browser Settings
HEADLESS=true
DISABLE_GPU=true
NO_SANDBOX=true