# FarsNews Crawler - Environment Variables
# کپی این فایل به .env و مقادیر را تنظیم کنید

# تنظیمات سرور
PORT=3004
NODE_ENV=production

# تنظیمات پایگاه داده
DB_PATH=./data/database.sqlite

# تنظیمات امنیتی
JWT_SECRET=your-super-secret-jwt-key-change-this
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# تنظیمات Puppeteer
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu

# تنظیمات کرال
DEFAULT_CRAWL_INTERVAL=10
MAX_CONCURRENT_CRAWLS=3
REQUEST_TIMEOUT=30000
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# تنظیمات RSS
RSS_TITLE=اخبار فارس
RSS_DESCRIPTION=آخرین اخبار از منابع مختلف
RSS_LANGUAGE=fa-IR
RSS_COPYRIGHT=© 2024 FarsNews Crawler
RSS_TTL=60

# تنظیمات لاگ
LOG_LEVEL=info
LOG_FILE=./logs/app.log
MAX_LOG_SIZE=10MB
MAX_LOG_FILES=5

# تنظیمات شبکه
REQUEST_DELAY=1000
RETRY_ATTEMPTS=3
RETRY_DELAY=2000

# تنظیمات حافظه
MAX_MEMORY_USAGE=512MB
GARBAGE_COLLECTION_INTERVAL=300000

# PostgreSQL (optional)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=farsnews_crawler
DB_USER=postgres
DB_PASSWORD=your_strong_password